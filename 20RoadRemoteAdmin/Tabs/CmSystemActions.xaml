<UserControl x:Class="_20RoadRemoteAdmin.Tabs.CmSystemActions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_20RoadRemoteAdmin.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical" Margin="10">
        <TextBlock Grid.Row="0" Text="System actions" FontWeight="Bold" Margin="0,0,0,5" />
        <TextBlock>
            <Hyperlink Click="onRestartClicked" TextDecorations="None">
                <TextBlock Text="Restart/start client" />
            </Hyperlink>
        </TextBlock>
        <TextBlock>
            <Hyperlink Click="onLogsClicked" TextDecorations="None">
                <TextBlock Text="Open ConfigMgr client logs folder" />
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</UserControl>
